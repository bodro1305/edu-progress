---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  colors: string;
}

const { class: classTag, colors, ...props } = Astro.props;

const baseClasses =
  "rounded text-white px-2 py-2 text-sm font-medium disabled:bg-gray-400 disabled:hover:bg-gray-600";

const colorClasses = {
  green: `
  border-green-600
  bg-green-600 
  lg:hover:border-green-400 
  lg:hover:bg-green-700 
  active:border-green-400 
  active:bg-green-700 
`,
  red: `
  border-red-600
  bg-red-600  
  lg:hover:border-redn-400 
  lg:hover:bg-red-700 
  active:border-red-400 
  active:bg-red-700 
`,
  yellow: `
  border-yellow-600
  bg-yellow-600 
  lg:hover:border-yellow-400 
  lg:hover:bg-yellow-700 
  active:border-yellow-400 
  active:bg-yellow-700 
`,
};

const buttonClasses = `${baseClasses} ${colorClasses[colors]} ${classTag}`;
---

<button class={buttonClasses} {...props}>
  <slot />
</button>
